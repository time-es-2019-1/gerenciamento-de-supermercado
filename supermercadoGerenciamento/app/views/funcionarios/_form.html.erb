    <%= form.label :dataPagamento %>
    <%= form.date_select :dataPagamento %>
  </div>
  <div class="field">
    <%= form.label :endereco_id %>
    <%= form.collection_select(:endereco_id , Endereco.all,:id, :nomeCidade, prompt: true)%>
  </div>
