  </div>

  <div class="field">
    <%= form.label :numTelefone %>
    <%= form.text_field :numTelefone %>
  </div>

  <div class="field">
    <%= form.label :dataNascimento %>
    <%= form.date_select :dataNascimento %>
  </div>

  <div class="field">
    <%= form.label :cargo %>
